import complex {Complex}

struct Rect {
   x0 Float
   y0 Float
   width Float
   height Float
}

struct Vec2D {
    x Float
    y Float
}

fn lerp2d(rect, x, max_x, y, max_y) (Float, Float) {
    return (
        rect.width * from_int(x) / from_int(max_x) + rect.x0,
        rect.height * from_int(y) / from_int(max_y) + rect.y0)
        
}

