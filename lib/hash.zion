export {hash, Hashable}

link pkg "libsodium"
link in "zion_sodium.c"

class Hashable a {
    fn hash(a) Int # NB: probably should be an uint but we don't have
                   # those yet.
}

instance Hashable String {
    fn hash(s) {
        let String(sz, len) = s
        return __builtin_ffi_2("zion_hash", sz, len)
    }
}

instance Hashable Int {
    fn hash(i) {
        return __builtin_ffi_1("zion_hash_int", i)
    }
}

fn hash_combine(seed Int, value Int) Int {
  return __builtin_ffi_2("zion_hash_combine", seed, value)
}
